<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

   <!-- Initialization for data source -->
   <bean id="dataSource" 
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
      <property name="url" value="jdbc:mysql://192.168.0.6:3306/dotsdb"/>
      <property name="username" value="DaveSugrue"/>
      <property name="password" value="letMeIn"/>
   </bean>

   <!-- Definition for MySQLUserRepositoryImpl bean -->
   <bean id="MySQLUserRepositoryImpl" class="ie.sugrue.repository.MySQLUserRepositoryImpl">
      <property name="dataSource"  ref="dataSource" />    
   </bean>
      
</beans>